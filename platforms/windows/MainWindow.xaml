<Window x:Class="VoidWarp.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VoidWarp" 
        Height="750" 
        Width="1150"
        MinHeight="600"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="#121212">
    
    <Window.Resources>
        <!-- ==================== Material Design Colors ==================== -->
        <Color x:Key="BackgroundColor">#121212</Color>
        <Color x:Key="SurfaceColor">#1E1E1E</Color>
        <Color x:Key="SurfaceLightColor">#2D2D2D</Color>
        <Color x:Key="SurfaceVariantColor">#252525</Color>
        <Color x:Key="PrimaryColor">#BB86FC</Color>
        <Color x:Key="PrimaryVariantColor">#9966CC</Color>
        <Color x:Key="SecondaryColor">#03DAC6</Color>
        <Color x:Key="AccentBlueColor">#2196F3</Color>
        <Color x:Key="SuccessColor">#4CAF50</Color>
        <Color x:Key="WarningColor">#FF9800</Color>
        <Color x:Key="ErrorColor">#CF6679</Color>
        <Color x:Key="TextPrimaryColor">#FFFFFF</Color>
        <Color x:Key="TextSecondaryColor">#B0B0B0</Color>
        <Color x:Key="TextTertiaryColor">#666666</Color>
        <Color x:Key="DividerColor">#333333</Color>
        
        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
        <SolidColorBrush x:Key="SurfaceLightBrush" Color="{StaticResource SurfaceLightColor}"/>
        <SolidColorBrush x:Key="SurfaceVariantBrush" Color="{StaticResource SurfaceVariantColor}"/>
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="PrimaryVariantBrush" Color="{StaticResource PrimaryVariantColor}"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
        <SolidColorBrush x:Key="AccentBlueBrush" Color="{StaticResource AccentBlueColor}"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
        <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
        <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextTertiaryColor}"/>
        <SolidColorBrush x:Key="DividerBrush" Color="{StaticResource DividerColor}"/>
        
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
        <!-- ==================== Card Style ==================== -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ==================== Modern Button Styles ==================== -->
        <Style x:Key="ModernButtonBase" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#1A1A1A"/>
                                <Setter Property="Foreground" Value="#444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ModernButton" TargetType="Button" BasedOn="{StaticResource ModernButtonBase}">
            <Setter Property="Background" Value="{StaticResource SurfaceLightBrush}"/>
        </Style>
        
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButtonBase}">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="#000000"/>
        </Style>
        
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButtonBase}">
            <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
        
        <Style x:Key="OutlineButton" TargetType="Button" BasedOn="{StaticResource ModernButtonBase}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        </Style>
        
        <!-- ==================== Toggle Switch Style ==================== -->
        <Style x:Key="ToggleSwitchStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="56"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Track" 
                                Background="{StaticResource SurfaceLightBrush}" 
                                CornerRadius="14" 
                                Padding="2">
                            <Grid>
                                <Ellipse x:Name="Thumb" 
                                         Width="24" Height="24" 
                                         Fill="{StaticResource TextSecondaryBrush}" 
                                         HorizontalAlignment="Left"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="Thumb" Property="Fill" Value="White"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Track" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ==================== Peer ListBox Item Style ==================== -->
        <Style x:Key="PeerItemStyle" TargetType="ListBoxItem">
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="ItemBorder" 
                                Background="{StaticResource SurfaceVariantBrush}" 
                                CornerRadius="10" 
                                Padding="12"
                                BorderThickness="2"
                                BorderBrush="Transparent">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource SurfaceLightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#2A2A4A"/>
                                <Setter TargetName="ItemBorder" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ==================== Modern ProgressBar Style ==================== -->
        <Style x:Key="ModernProgressBar" TargetType="ProgressBar">
            <Setter Property="Height" Value="10"/>
            <Setter Property="Background" Value="{StaticResource SurfaceLightBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <Grid>
                                <Border x:Name="PART_Track" CornerRadius="5"/>
                                <Border x:Name="PART_Indicator" 
                                        Background="{TemplateBinding Foreground}" 
                                        CornerRadius="5" 
                                        HorizontalAlignment="Left"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ==================== ScrollViewer Style ==================== -->
        <Style x:Key="ModernScrollViewer" TargetType="ScrollViewer">
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="340"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- ==================== Left Panel: Discovery ==================== -->
        <Grid Grid.Column="0" Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header with Logo -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="VoidWarp" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource PrimaryBrush}"/>
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="Device ID: " 
                               Foreground="{StaticResource TextSecondaryBrush}" 
                               FontSize="12"
                               VerticalAlignment="Center"/>
                    <Border Background="{StaticResource SurfaceLightBrush}" 
                            CornerRadius="4" 
                            Padding="8,4">
                        <TextBlock Text="{Binding DeviceId}" 
                                   Foreground="{StaticResource SecondaryBrush}" 
                                   FontSize="12" 
                                   FontFamily="Consolas"
                                   FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>
            </StackPanel>
            
            <!-- Receive Mode Card -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Icon Circle -->
                    <Border Grid.Column="0" 
                            Width="48" Height="48" 
                            CornerRadius="24" 
                            Background="#1B5E20" 
                            Margin="0,0,16,0">
                        <TextBlock Text="ðŸ“¥" 
                                   FontSize="22" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    
                    <!-- Text -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Receive Mode" 
                                   FontSize="15"
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock FontSize="12" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,2,0,0">
                            <Run Text="Port: "/>
                            <Run Text="{Binding ReceiverPort, Mode=OneWay}" 
                                 Foreground="{StaticResource SecondaryBrush}"/>
                        </TextBlock>
                    </StackPanel>
                    
                    <!-- Toggle Switch -->
                    <ToggleButton Grid.Column="2" 
                                  Style="{StaticResource ToggleSwitchStyle}"
                                  IsChecked="{Binding IsReceiving}"
                                  Command="{Binding ToggleReceiverCommand}"/>
                </Grid>
            </Border>
            
            <!-- Device List Card -->
            <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Section Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="NEARBY DEVICES" 
                                   FontSize="11" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   LetterSpacing="1"/>
                        <Border Background="{StaticResource PrimaryVariantBrush}" 
                                CornerRadius="10" 
                                Padding="8,2"
                                Margin="10,0,0,0">
                            <TextBlock FontSize="11" 
                                       Foreground="White"
                                       FontWeight="SemiBold">
                                <Run Text="{Binding Peers.Count, Mode=OneWay}"/>
                            </TextBlock>
                        </Border>
                    </StackPanel>
                    
                    <!-- Peers List -->
                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding Peers}"
                             SelectedItem="{Binding SelectedPeer, Mode=TwoWay}"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ItemContainerStyle="{StaticResource PeerItemStyle}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Device Icon -->
                                    <Border Grid.Column="0" 
                                            Width="40" Height="40" 
                                            CornerRadius="20" 
                                            Background="{StaticResource SurfaceLightBrush}" 
                                            Margin="0,0,12,0">
                                        <TextBlock Text="ðŸ’»" 
                                                   FontSize="18" 
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    
                                    <!-- Device Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding DeviceName}" 
                                                   Foreground="{StaticResource TextPrimaryBrush}" 
                                                   FontWeight="Medium"
                                                   FontSize="14"/>
                                        <TextBlock Text="{Binding DisplayName}" 
                                                   Foreground="{StaticResource TextSecondaryBrush}" 
                                                   FontSize="11"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>
                                    
                                    <!-- Test Connection Button -->
                                    <Button Grid.Column="2" 
                                            Content="ðŸ”—" 
                                            ToolTip="Test Connection"
                                            Padding="10,6"
                                            Background="Transparent"
                                            Foreground="{StaticResource PrimaryBrush}"
                                            BorderThickness="0"
                                            FontSize="16"
                                            Cursor="Hand"
                                            Command="{Binding DataContext.TestConnectionCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                            CommandParameter="{Binding}"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <!-- Empty State -->
                    <StackPanel Grid.Row="1" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Visibility="{Binding Peers.Count, Converter={StaticResource BoolToVis}, ConverterParameter=Inverse}">
                        <TextBlock Text="ðŸ”" FontSize="56" HorizontalAlignment="Center" Opacity="0.4"/>
                        <TextBlock Text="No devices found" 
                                   Foreground="{StaticResource TextTertiaryBrush}" 
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   Margin="0,12,0,0"/>
                        <TextBlock Text="Click Scan to discover devices" 
                                   Foreground="{StaticResource TextTertiaryBrush}" 
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Action Buttons -->
            <StackPanel Grid.Row="3" Margin="0,16,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="0" 
                            Content="{Binding ScanButtonText}" 
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding ScanCommand}"/>
                    
                    <Button Grid.Column="2" 
                            Content="+ Add" 
                            Style="{StaticResource ModernButton}"
                            Command="{Binding AddManualPeerCommand}"/>
                </Grid>
                
                <Button Content="ðŸ“‚ Open Downloads" 
                        Style="{StaticResource ModernButton}"
                        Margin="0,10,0,0"
                        Command="{Binding OpenDownloadsCommand}"/>
            </StackPanel>
        </Grid>
        
        <!-- ==================== Right Panel: Actions & Log ==================== -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Send File Card -->
            <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="ðŸ“¤" FontSize="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Send File" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                    
                    <!-- File Selection Row -->
                    <Grid Grid.Row="1" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" 
                                Background="{StaticResource BackgroundBrush}" 
                                CornerRadius="8" 
                                Padding="16,12"
                                BorderThickness="1"
                                BorderBrush="{StaticResource DividerBrush}">
                            <TextBlock Text="{Binding SelectedFileInfo}" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"
                                       FontSize="13"/>
                        </Border>
                        
                        <Button Grid.Column="1" 
                                Content="Browse" 
                                Style="{StaticResource OutlineButton}"
                                Margin="12,0,0,0"
                                Command="{Binding SelectFileCommand}"/>
                    </Grid>
                    
                    <!-- Send Button -->
                    <Button Grid.Row="2" 
                            Style="{StaticResource SuccessButton}"
                            HorizontalAlignment="Stretch"
                            Command="{Binding SendFileCommand}"
                            IsEnabled="{Binding CanSend}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸš€" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Send File" FontSize="15" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Status Card -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <TextBlock Grid.Row="0" 
                               Text="Transfer Status" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,12"/>
                    
                    <!-- Status Message -->
                    <TextBlock Grid.Row="1" 
                               Text="{Binding StatusMessage}" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="14"
                               Margin="0,0,0,16"/>
                    
                    <!-- Progress Bar -->
                    <ProgressBar Grid.Row="2" 
                                 Style="{StaticResource ModernProgressBar}"
                                 Value="{Binding ProgressValue}" 
                                 Maximum="100"
                                 Margin="0,0,0,8"/>
                    
                    <!-- Progress Percentage -->
                    <TextBlock Grid.Row="3" 
                               HorizontalAlignment="Right"
                               Foreground="{StaticResource PrimaryBrush}"
                               FontSize="13"
                               FontWeight="SemiBold">
                        <Run Text="{Binding ProgressValue, StringFormat={}{0:F1}}"/>
                        <Run Text="%"/>
                    </TextBlock>
                </Grid>
            </Border>
            
            <!-- Log Console Card -->
            <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="ðŸ“‹" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Log Console" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                    
                    <!-- Log Area (Terminal Style) -->
                    <Border Grid.Row="1" 
                            Background="#0D1117" 
                            CornerRadius="8" 
                            Padding="12"
                            BorderThickness="1"
                            BorderBrush="#21262D">
                        <ScrollViewer x:Name="LogScrollViewer" 
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding Logs}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" 
                                                   Foreground="#8B949E" 
                                                   FontSize="12" 
                                                   FontFamily="Consolas, Courier New, monospace"
                                                   TextWrapping="Wrap"
                                                   Margin="0,2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                    
                    <!-- Footer with Clear Button -->
                    <Grid Grid.Row="2" Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Network Info -->
                        <TextBlock Grid.Column="0"
                                   Text="{Binding LocalIpInfo}"
                                   Foreground="{StaticResource TextTertiaryBrush}"
                                   FontSize="11"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"/>
                        
                        <Button Grid.Column="1" 
                                Content="Clear" 
                                Style="{StaticResource ModernButton}"
                                Padding="16,8"
                                FontSize="12"
                                Command="{Binding ClearLogsCommand}"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
